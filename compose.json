{
  "version": "2.1",
  "networks": {
    "default": {
      "external": {
        "name": "ubuntu_default"
      }
    }
  },
  "services": {
    "admin": {
      "environment": [
        "SERVICE_2222_NAME=ssh"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.0"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:admin",
      "hostname": "admin"
    },
    "dnsmasq": {
      "environment": [
        "SERVICE_2222_NAME=ssh",
        "SERVICE_5353_NAME=dns"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "5354:5353",
        "5354:5353/udp"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.99"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:dnsmasq",
      "hostname": "dnsmasq"
    },
    "consul": {
      "environment": [
        "SERVICE_2222_NAME=ssh"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.2"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:consul",
      "hostname": "consul"
    },
    "consul-ui": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "environment": [
        "SERVICE_2222_NAME=ssh",
        "SERVICE_8500_NAME=consul-ui"
      ],
      "expose": [
        "8500"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.8"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:consul-ui",
      "hostname": "consul-ui"
    },
    "openvpn": {
      "environment": [
        "SERVICE_2222_NAME=ssh",
        "SERVICE_1194_NAME=openvpn"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "1194:1194"
      ],
      "privileged": true,
      "cap_add": [
        "NET_ADMIN"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.3"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:openvpn",
      "hostname": "openvpn"
    },
    "squid": {
      "environment": [
        "SERVICE_3128_NAME=squid",
        "SERVICE_2222_NAME=ssh"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "3128:3128"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.4"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:squid",
      "hostname": "squid"
    },
    "linkerd": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "environment": [
        "SERVICE_2222_NAME=ssh",
        "SERVICE_4140_NAME=linkerd-router",
        "SERVICE_9990_NAME=linkerd"
      ],
      "expose": [
        4140
      ],
      "ports": [
        "${BLOCK_SSH_PORT}",
        "80:4140",
        "1080:4140"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.7"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:linkerd",
      "hostname": "linkerd"
    },
    "etcd": {
      "environment": [
        "SERVICE_2222_NAME=ssh"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.15"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:etcd",
      "hostname": "etcd"
    },
    "registrator": {
      "volumes": [
        "/var/run/docker.sock:/tmp/docker.sock"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.16"
        }
      },
      "image": "gliderlabs/registrator",
      "hostname": "registrator",
      "command": "-internal consul://${NET_PREFIX}.2:8500"
    }
  }
}
